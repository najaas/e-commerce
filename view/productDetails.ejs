<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PRODUCTS</title>
    <link rel="stylesheet" href="/product.css">
    <link rel="stylesheet" href="/main.css">
</head>
<body>

    <div class="container">
        <div class="layer1">
            <form action="/productDetails" method="post">
                <div class="logout">
                   <button class="btn1"><a href="/login">LOGOUT</a></button>
                </div>
            </form>
        </div>
        <div class="layer2">
            <div class="tabs">
                <ul>
                    <li onclick="window.location.href=''">USERS</li>
                    <li onclick="window.location.href='/addProduct'">ADD PRODUCTS</li>
                    <li onclick="window.location.href='/updateProduct'">UPDATE</li>
                </ul>
            </div>
            <div class="content_part">
                <div class="products_list_head">
                    <p style="font-size: x-large; padding-left: 1.5rem;">Products</p>
                    <button class="btn11"><a href="/addProduct">Add Product</a></button>
                </div>
                <div class="product_list">
                    <div class="product_table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Product Image</th>
                                    <th>Product Name</th>
                                    <th>Price</th>
                                    <th>Discount Percentage</th>
                                    <th>Quantity</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% Products.forEach(product => { %>
                                    <tr>
                                        <td>
                                            <div class="imgproduct"><img src="/image/<%= product.image %>" width="80px" height="60px" alt="" srcset=""></div>
                                        </td>
                                        <td><%= product.name %></td>
                                        <td><%= product.price %></td>
                                        <td><%= product.description %></td>
                                        <td><%= product.description %></td>
                                      <td><a href="/updateProduct/<%= product._id %>"> <button class="vaa">Edit </button> </a></td>
                                        <td> <a href=""><button class="vaa">Delete</button></a></td>
                                        <form action="/delete/<%= product._id %>" method="post"  onsubmit="return confirm('do you want to delete?')"></form>
                                        <td>
                                            <i class="bi bi-pencil-square"></i>
                                        </td>
                                        <td>
                                            <i class="bi bi-trash-fill"></i>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>